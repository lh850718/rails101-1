<div class="col-md-12">

<h2 class="text-center">  all my posts</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Contents</th>
        <th>Group name</th>
        <th>Last update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <%  @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-xs")%> </td>
          <td><%= link_to("Delete", group_post_path(post.group, post), class: "btn btn-default btn-xs" ,method: :delete, data:{ confirm: "Are you sure?"})%></td>



            </tr>
            <% end %>
            </tbody>
            </table>
            </div>
